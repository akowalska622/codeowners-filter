{
  "name": "codeowners-filter",
  "displayName": "CODEOWNERS Filter",
  "description": "Filters files in the tree view and search based on the CODEOWNERS file.",
  "version": "0.0.1",
  "publisher": "Ania Kowalska",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codeOwners.listCodeOwners",
        "title": "CODEOWNERS: List Code Owners"
      },
      {
        "command": "codeOwners.refresh",
        "title": "CODEOWNERS: Refresh CODEOWNERS View"
      },
      {
        "command": "codeOwners.selectOwner",
        "title": "CODEOWNERS: Select Code owner"
      },
      {
        "command": "codeOwners.toggleSearchFilter",
        "title": "CODEOWNERS: Toggle search in owned files only"
      },
      {
        "command": "codeOwners.generateIncludePattern",
        "title": "CODEOWNERS: Generate \"include\" pattern for selected Code Owner"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "codeOwnersView",
          "name": "CODEOWNERS View"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "codeowners": "^5.1.1",
    "minimatch": "^10.0.1"
  },
  "devDependencies": {
    "@types/minimatch": "^5.1.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.97.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3"
  }
}
